<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainTable"
    android:layout_height="fill_parent"
    android:layout_width="match_parent"
    android:background="@drawable/backrepeat"
    android:tileMode="repeat"
    android:padding="3dip"
    android:stretchColumns="1"> 
    
    
    <TableRow android:layout_width="fill_parent"
  			  android:layout_height="fill_parent"  			
    		  android:layout_span="3" android:layout_gravity="center">
    
	    <ImageView android:id="@+id/tone"
	    		   android:layout_weight="1"
				   android:scaleType="center"
				   android:padding="3dip"
				   android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:src="@drawable/tone13"/>  
	           
	</TableRow>
	
	<TableRow android:layout_width="fill_parent"
  			  android:layout_height="fill_parent"  			
    		  android:layout_span="3">
    		  
		<ImageView android:id="@+id/guide"
				   android:scaleType="center"
				   android:layout_weight="1"
				   android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:src="@drawable/glyph2"/>  
	           
	</TableRow>
	
	<TableRow android:gravity="center">
		<LinearLayout android:id="@+id/LinearLayout01" 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:layout_gravity="center">
			<ImageView android:id="@+id/antipode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/glyph3"/>
			<ImageView android:id="@+id/seal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/glyph4"/>  
		
			<ImageView android:id="@+id/analog"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/glyph5"/>  
		</LinearLayout>
	</TableRow>
	
	<TableRow>
		<ImageView android:id="@+id/occult"
				   android:layout_weight="1"
				   android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:src="@drawable/glyph6"/>  
	</TableRow>
	
	<TableRow>
		<TextView android:id="@+id/date_title"
   				  android:layout_width="fill_parent"  			      
  			      android:layout_weight="1"
  			      android:padding="3dip"
  			      android:gravity="center"
  			      android:textColor="#000000"
  			 	  android:text="@string/date_title" android:textSize="25sp"/>	 
		</TableRow>
	<TableRow>
		<TextView android:id="@+id/date_name"
	   				  android:layout_width="fill_parent"
	  			      android:layout_weight="1"
	  			      android:padding="3dip"
	  			      android:gravity="center"
	  			      android:textColor="#000000"
	  			 	  android:text="@string/date_name" android:textSize="30sp"/>	
	</TableRow>
	</TableLayout>
