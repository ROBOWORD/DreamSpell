<Context xmlns:emg="http://www.emergetk.com/" Id="main" ClassName="Main">
	<img src="/Images/hunabku.jpg" style="height:90px; width:90px; float:left; border:1px solid black; margin-left:10px; margin-top:-40px;"/>

	<h1>DreamSpell</h1>
	
	<br/>

	<emg:DreamSpell.StarSummary Id="StarHeader" ClientId="StarHeader"/>
	


	<!--<i>Down for maintenance. Should be back up in 10-20 min</i>-->

	<emg:TabPane Id="tabs">
		<emg:Pane Label="Today" ClassName="TodayTab" Id="Today">				
			<div class="clearfix">
			<emg:Label Text="Today is {Birthday}" ClassName="DateLabel"/>
			<emg:DreamSpell.StarInfo/>
			<emg:DreamSpell.StarDetail/>				
			</div>
			<emg:DreamSpell.FriendGroups/>
		</emg:Pane>
		<emg:Pane Label="Me" ClassName="MeTab" Id="Me" Visible="False">	
			<div class="clearfix">
			<emg:DreamSpell.StarInfo/>
			<emg:DreamSpell.StarDetail/>
			</div>
			<emg:DreamSpell.FriendGroups/>			
		</emg:Pane>
		<emg:Pane Label="Friends" ClassName="FriendsTab" Id="Friends">	
			<h2>Dream Friends</h2>
	
			<div class="clearfix">
				<emg:DreamSpell.FriendList/>
			</div>
		</emg:Pane>
		<emg:Pane Label="Galatic Spin">		
			<emg:DreamSpell.GalacticSpinCycleView/>
		</emg:Pane>
		<emg:Pane Label="Oracle">		
			<iframe src="/oracle/oracle.htm" width="700" height="500"/>
		</emg:Pane>	
		<emg:Pane Label="Information">		
			<H2>For More Information</H2>
			<hr/>
			<P align="left">
