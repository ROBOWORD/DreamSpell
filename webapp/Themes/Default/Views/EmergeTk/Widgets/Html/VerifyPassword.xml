<Widget xmlns:emg="http://www.emergetk.com/">
	<div class="formElement">
		<label for="PasswordField">Password</label>
		<emg:TextBox Id="PasswordField" IsPassword="True"/>
	</div>
	<div class="formElement">
		<label for="VerifyPassword">Verify Password</label>
		<emg:TextBox Id="VerifyPassword" IsPassword="True"/>
	</div>
	<div class="passwordError">
		<emg:Label Id="PasswordError" Visible="False"/>
	</div>
	<div class="buttonPane">
		<emg:PlaceHolder Id="SubmitButton"/>
		<emg:PlaceHolder Id="CancelButton"/>
	</div>
</Widget>